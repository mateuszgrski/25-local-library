extends layout

block content
    h1 #{title}: #{genre.name}

    hr

    if genre.Books.length
        p #[strong Delete the following books before attempting to delete this genre:]
        div(style='margin-left:20px;margin-top:20px;')
            h4 Books
            dl
                each book in genre.Books
                    if book
                        dt
                            a(href=book.url) #{book.title}
                        dd #{book.summary}
    else
        p Do you really want to delete this genre?

        form(method="POST")
            div.form-group
                input#genreid.form-control(type="hidden" name="genreid" value=genre.id)
            button.btn.btn-primary(type="submit") Delete


